<!DOCTYPE html>
<html>

<head>
  <title>friends 4 heart</title>
  <link rel="shortcut icon" href="images/titleIcon.ico" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script defer src="/javascripts/main.js"></script>
  <script defer src="/javascripts/auth.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <header>
    <nav>
      <div class="nav-wrapper">
        <div class="container">
          <div class="row">
            <a href="/" class="brand-logo">
              <span class="logo-left">friends</span>
              <span class="logo-4">4</span>
              <span class="logo-right">heart</span></a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><a href="/">Главная</a></li>
              {{#if auth}}
              <li><a href="/">{{user.name}}</a></li>
              <li><a href="/logout">Выйти</a></li>
              {{else}}
              <li><a class="waves-effect modal-trigger" href="#singIn">Войти</a></li>
              <li><a class="waves-effect modal-trigger" href="#singOut">Регистрация</a></li>
              {{/if}}

            </ul>
          </div>
        </div>
      </div>
    </nav>
    {{!-- mobile menu --}}
    <ul id="mobile-demo" class="sidenav">
      {{#if auth}}
      <li><a href="/">{{user.name}}</a></li>
      <li><a href="/logout">Выйти</a></li>
      {{else}}
      <li><a class="waves-effect modal-trigger" href="#singIn">Войти</a></li>
      <li><a class="waves-effect modal-trigger" href="#singOut">Регистрация</a></li>
      {{/if}}
      <li><a href="/">Главная</a></li>
    </ul>
  </header>

  {{!-- Main info --}}
  {{{body}}}

  {{!-- Footer --}}
  <footer class="page-footer">
    <div class="footer-copyright">
      <div class="container">
        © 2020
      </div>
    </div>
  </footer>

  {{!-- Modal forms --}}
  <div id="singIn" class="modal">
    <div class="modal-content">
      <div class="row">
        <div class="col s12">
          <form action="/login" method="POST" name="loginForm">
            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">mail</i>
                <input placeholder="Ivan" id="email" type="email" name="email" class="validate">
                <label for="email">Почта</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">lock</i>
                <input id="passwordIn" type="password" name="password" class="validate">
                <label for="passwordIn">Пароль</label>
              </div>
            </div>

            <div class="row">
              <div class="col s12 center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Отправить
                  <i class="material-icons right">send</i>
                </button>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

  <div id="singOut" class="modal">
    <div class="modal-content">
      <div class="row">
        <div class="col s12">
          <form action="/reg" method="POST" name="regForm">
            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">account_circle</i>
                <input placeholder="Ivan" id="username" type="text" name="username" class="validate">
                <label for="username">Имя</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">mail</i>
                <input placeholder="Ivan" id="email" type="email" name="email" class="validate">
                <label for="email">Почта</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">lock</i>
                <input id="password" type="password" name="password" class="validate">
                <label for="password">Пароль</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field s12">
                <i class="material-icons prefix">repeat</i>
                <input id="passwordRep" type="password" name="passwordRep" class="validate">
                <label for="passwordRep">Повторите пароль</label>
              </div>
            </div>

            <div class="row">
              <div class="col s12 center">
                <button class="btn waves-effect waves-light" type="submit" name="action">Отправить
                  <i class="material-icons right">send</i>
                </button>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
