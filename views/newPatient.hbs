<div class="container">
  <div class="row">
    <form name="patientForm" class="col s12">
      <div class="newPatient-wrapper">
        <div class="row">
          <div class="input-field col s12">
            <input id="first_name" type="text" name="name" class="validate">
            <label for="first_name">Имя Пациента</label>
          </div>
        </div>
        {{!-- <div class="row">
          <div class="input-field col s6 offset-s3">
            <input id="age" type="text" class="validate">
            <label for="age">Возраст</label>
          </div>
        </div> --}}
        <div class="row">
          <div class="input-field col s12">
            <input id="diagnosis" type="text" name="diagnosis" class="validate">
            <label for="diagnosis">Диагноз</label>
          </div>
        </div>

      </div>
      <div class="input-field col s12">
        <h4>Вопросы:</h4>

        {{#each questions}}
        <p>{{question}}</p>
        <p>
          <label>
            <input value="true" name="{{id}}" type="radio" checked />
            <span>Да</span>
          </label>
        </p>
        <p>
          <label>
            <input name="{{id}}" value="false" type="radio" />
            <span>Нет</span>
          </label>
        </p>
        {{/each}}
        <button class="btn waves-effect waves-light" type="submit" name="action">Отправить
          <i class="material-icons right">send</i>
        </button>
    </form>
  </div>
</div>
</div>

<script defer src="/javascripts/patientAdd.js"></script>
